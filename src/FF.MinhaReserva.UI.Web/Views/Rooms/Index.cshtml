@using FF.MinhaReserva.UI.Web.Helpers
@model IEnumerable<FF.MinhaReserva.Application.ViewModels.RoomViewModel>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

@{
    if (this.IfClaim("ManagementRoom", "EX"))
    {
        <p>
            @Html.ActionLink("Create New", "Create")
        </p>
    }
}
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Description)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.NumberOfAtendees)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NumberOfAtendees)
            </td>
            <td>
                @*@Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
        @Html.ActionLink("Details", "Details", new { id = item.Id }) |
        @Html.ActionLink("Delete", "Delete", new { id = item.Id }).IfClaimHelper("ManagementRoom", "EX")*@
                <a href="@Url.Action("Edit", new { id=item.Id})" class="btn btn-warning" @Html.Raw(this.IfClaimShow("ManagementRoom", "ED"))>Editar</a>
                <a href="@Url.Action("Details", new { id=item.Id})" class="btn btn-primary" @Html.Raw(this.IfClaimShow("ManagementRoom", "DE"))>Detalhes</a>
                <a href="@Url.Action("Delete", new { id=item.Id})" class="btn btn-danger" @Html.Raw(this.IfClaimShow("ManagementRoom", "EX"))>Excluir</a>
            </td>
        </tr>
    }

</table>
