@using FF.MinhaReserva.UI.Web.Helpers
@model IEnumerable<FF.MinhaReserva.Application.ViewModels.ResourceViewModel>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Description)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.BrandId)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ModelId)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Description)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.BrandId)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ModelId)
        </td>
        <td>
            @*@Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
            @Html.ActionLink("Details", "Details", new { id = item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id = item.Id })*@


            <a href="@Url.Action("Edit", new { id=item.Id})" class="btn btn-warning" @Html.Raw(this.IfClaimShow("ManagementResource", "ED"))>Editar</a>
            <a href="@Url.Action("Details", new { id=item.Id})" class="btn btn-primary" @Html.Raw(this.IfClaimShow("ManagementResource", "DE"))>Detalhes</a>
            <a href="@Url.Action("Delete", new { id=item.Id})" class="btn btn-danger" @Html.Raw(this.IfClaimShow("ManagementResource", "EX"))>Excluir</a>

        </td>
    </tr>
}

</table>
